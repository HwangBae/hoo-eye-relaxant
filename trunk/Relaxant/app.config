<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Hush.Relaxant.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Hush.Relaxant.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
  </configSections>

  <userSettings>
    <Hush.Relaxant.Properties.Settings>
      <setting name="WorkingMinutes" serializeAs="String">
        <value>20</value>
      </setting>
      <setting name="MusicFile" serializeAs="String">
        <value>sound\sample.mp3</value>
      </setting>
      <setting name="AdminPassword" serializeAs="String">
        <value>1234</value>
      </setting>
      <setting name="Resctriction4Configuration" serializeAs="String">
        <value>Free</value>
      </setting>
      <setting name="Resctriction4TerminateBreaking" serializeAs="String">
        <value>Free</value>
      </setting>
      <setting name="MaxDelayMinutes" serializeAs="String">
        <value>2</value>
      </setting>
      <setting name="ShutdownMonitor" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="BreakingMinutes" serializeAs="String">
        <value>3</value>
      </setting>
      <setting name="Resctriction4Quit" serializeAs="String">
        <value>Free</value>
      </setting>
    </Hush.Relaxant.Properties.Settings>
  </userSettings>
  <applicationSettings>
    <Hush.Relaxant.Properties.Settings>
      <setting name="AdminMode" serializeAs="String">
        <value>Password</value>
      </setting>
    </Hush.Relaxant.Properties.Settings>
  </applicationSettings>

  <log4net>

    <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
      <file value="log-file.txt" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <appender name="InfoFileAppender" type="log4net.Appender.FileAppender">
      <file value="log-info-file.txt" />
      <appendToFile value="false" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger{1} [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{mm:ss,fff} [%thread] %-5level %logger{1} [%property{NDC}] - %message%newline" />
      </layout>
    </appender>


    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="InfoFileAppender"/>
    </root>

    <!-- Specify the level for some specific categories 
    <logger name="ConsoleApp.LoggingExample">
      <level value="INFO" />
      <appender-ref ref="RollingLogFileAppender" />
    </logger>
    -->
  </log4net>
</configuration>